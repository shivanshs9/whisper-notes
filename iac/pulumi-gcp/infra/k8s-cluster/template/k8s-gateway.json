{
  "apiVersion": "gateway.networking.k8s.io/v1beta1",
  "kind": "Gateway",
  "metadata": {
    "name": "public-istio-gateway"
  },
  "spec": {
    "gatewayClassName": "istio",
    "listeners": [
      {
        "name": "https",
        "protocol": "HTTPS",
        "port": 443,
        "hostname": "${domainGroup}",
        "allowedRoutes": {
          "kinds": [
            {
              "kind": "HTTPRoute"
            }
          ],
          "namespaces": {
            "from": "All"
          }
        },
        "tls": {
          "mode": "Terminate",
          "certificateRefs": [
            {
              "name": "${domainTlsCertName}"
            }
          ]
        }
      }
    ]
  }
}